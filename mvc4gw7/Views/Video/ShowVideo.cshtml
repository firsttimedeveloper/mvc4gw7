@model IEnumerable <mvc4gw7.Models.MediaElement>

@{
    ViewBag.Title = "Видеоматериалы";   
}

<div class="logo">
    <img src="/Content/Logo.png" alt="Logo"/>
</div>
    
<div class="title">
    <h1>@ViewBag.Title</h1>
</div>


<div class="chapter">
    <h4>@ViewBag.collectionTitle</h4>
</div>

<div class="flashPlayer">

<object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" width="200" height="190" id="Test" align="middle">
